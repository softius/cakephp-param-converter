{
    "name": "ali1/cakephp-param-converter",
    "description": "Param converter for CakePHP Routing",
    "keywords": ["cakephp", "plugin", "middleware", "routing"],
    "type": "cakephp-plugin",
    "license": "MIT",
    "authors": [
        {
            "name": "Iacovos Constantinou",
            "email": "softius@gmail.com",
            "role": "developer"
        }
    ],
    "require": {
        "php": ">=7.2",
        "cakephp/cakephp": "^4.0"
    },
    "require-dev": {
        "cakephp/cakephp-codesniffer": "^3.0",
        "phpunit/phpunit": "^8.5",
        "phpstan/phpstan": "^1.10",
        "phpstan/phpstan-webmozart-assert": "^1.2",
        "phpstan/phpstan-strict-rules": "^1.5",
        "timeweb/phpstan-enum": "^3"
    },
    "autoload": {
        "psr-4": {
            "ParamConverter\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ParamConverter\\Test\\": "tests",
            "Cake\\Test\\": "./vendor/cakephp/cakephp/tests"
        }
    },
    "scripts": {
        "phpstan": "phpstan analyse",
        "test": "phpunit --no-coverage",
        "test-coverage": "",
        "cs-check": "phpcs",
        "cs-fix": "phpcbf"
    }
}
